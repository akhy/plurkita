<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.dd.processbutton.iml.ActionProcessButton
        android:id="@+id/loadMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:text="Tap to load more"
        app:pb_colorComplete="@color/complementary_lighter"
        app:pb_colorError="#ffff0077"
        app:pb_colorNormal="@color/primary_base"
        app:pb_colorPressed="@color/primary_darker"
        app:pb_colorProgress="@color/tertiary_lighter"
        app:pb_textComplete="Success"
        app:pb_textError="Error loading timeline"
        app:pb_textProgress="Loading"/>

</LinearLayout>